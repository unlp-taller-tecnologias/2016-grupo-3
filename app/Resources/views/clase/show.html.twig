{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clase</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clase.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ clase.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ clase.descripcion }}</td>
            </tr>
            <tr>
                <th>Requerida</th>
                <td>{% if clase.requerida %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha de inicio</th>
                <td>{% if clase.fechaInicio %}{{ clase.fechaInicio|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha de finalizaci√≥n</th>
                <td>{% if clase.fechaFin %}{{ clase.fechaFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ clase.estado }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('clase_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('clase_edit', { 'id': clase.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
