{% extends 'base.html.twig' %}

{% block body %}
    
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <caption>Seleccione la clase para la cual se desea registrar asistencias</caption>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Fecha de inicio</th>
                <th>Fecha de finalizacion</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
        {% for clase in clases %}
            <tr>
                <td><a href="{{ path('alumnoclase_index') }}?idComision={{ idComision }}&idClase={{ clase.id }}">{{ clase.nombre }}</a></td>
                <td>{{ clase.descripcion }}</td>
                <td>{% if clase.fechaInicio %}{{ clase.fechaInicio|date('Y-m-d') }}{% endif %}</td>
                <td>{% if clase.fechaFin %}{{ clase.fechaFin|date('Y-m-d') }}{% endif %}</td>
                <td>{{ clase.estado }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% endblock %}
