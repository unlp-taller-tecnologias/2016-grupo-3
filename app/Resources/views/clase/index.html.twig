{% extends 'base.html.twig' %}

{% block body %}
    
        <a href="{{ path('clase_new') }}"> <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalHorizontal">Dar de alta una clase</button></a>

    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <caption>Lista de Clases</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Requerida</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clase in clases %}
            <tr>
                <td><a href="{{ path('clase_show', { 'id': clase.id }) }}">{{ clase.id }}</a></td>
                <td>{{ clase.nombre }}</td>
                <td>{{ clase.descripcion }}</td>
                <td>{% if clase.requerida %}Yes{% else %}No{% endif %}</td>
                <td>{% if clase.fecha %}{{ clase.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ clase.estado }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('clase_show', { 'id': clase.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('clase_edit', { 'id': clase.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% endblock %}
