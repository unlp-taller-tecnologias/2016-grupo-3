{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alumnos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Password</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Legajo</th>
                <th>Origen</th>
                <th>Telefono</th>
                <th>Celular</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alumno in alumnos %}
            <tr>
                <td><a href="{{ path('alumnos_show', { 'id': alumno.id }) }}">{{ alumno.id }}</a></td>
                <td>{{ alumno.password }}</td>
                <td>{{ alumno.apellido }}</td>
                <td>{{ alumno.nombre }}</td>
                <td>{{ alumno.dni }}</td>
                <td>{{ alumno.legajo }}</td>
                <td>{{ alumno.origen }}</td>
                <td>{{ alumno.telefono }}</td>
                <td>{{ alumno.celular }}</td>
                <td>{{ alumno.mail }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('alumnos_show', { 'id': alumno.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('alumnos_edit', { 'id': alumno.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('alumnos_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
