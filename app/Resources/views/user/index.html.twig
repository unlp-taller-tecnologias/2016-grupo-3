{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <caption>Docentes de la catedra {{nombreCatedra}}</caption>
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Cargo</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.apellido }}</td>
                <td>{{ user.nombre }}</td>
                <td>{{ user.dni }}</td>
                <td>{{ user.cargo }}</td>
                <td><a href="{{ path('user_edit', { 'id': user.id }) }}">Editar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="btn btn-primary">Nuevo docente</a>

{% endblock %}
