{% extends 'base.html.twig' %}

{% block body %}
  <a href="{{ path('instanciaparcial_new') }}?id={{ parcial }}" class="btn btn-primary">Nueva Instancia de Parcial</a>
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <caption>Lista Intancias de Parcial</caption>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>Estado</th>
                {% if secretario == true %}
                <th>Acciones</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for instanciaParcial in instanciaParcials %}
            <tr>
                <td>{{ instanciaParcial.nombre }}</td>
                <td>{{ instanciaParcial.descripcion }}</td>
                <td>{% if instanciaParcial.fecha %}{{ instanciaParcial.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ instanciaParcial.estado }}</td>
                {% if secretario == true %}
                <td>
                    <a href="{{ path('instanciaparcial_edit', { 'id': instanciaParcial.id }) }}">editar</a>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
