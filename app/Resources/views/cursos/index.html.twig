{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('cursos_new') }}">Crear Curso</a>
    {% endif %}
  
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <caption>Lista de Cursos</caption>
        <thead>
            <tr>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
        {% for curso in cursos %}
            <tr>
                <td><a href="{{ path('comisiones_index', { 'id': curso.id }) }}">{{ curso.nombre }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
