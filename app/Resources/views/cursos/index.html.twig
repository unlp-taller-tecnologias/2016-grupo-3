{% extends 'base.html.twig' %}

{% block body %}
   
  <a href="{{ path('cursos_new') }}">Create a new entry</a>
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <caption>Lista de Cursos</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Borrado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for curso in cursos %}
            <tr>
                <td><a href="{{ path('cursos_show', { 'id': curso.id }) }}">{{ curso.id }}</a></td>
                <td>{{ curso.nombre }}</td>
                <td>{{ curso.borrado }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cursos_show', { 'id': curso.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cursos_edit', { 'id': curso.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
