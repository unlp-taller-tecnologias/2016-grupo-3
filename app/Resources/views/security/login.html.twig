<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenido!{% endblock %}</title>
        {% block stylesheets %}
             <link rel="stylesheet" type="text/css" href="{{ asset('bundles/framework/css/bootstrap.css')}}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body  style="font-family: 'Dosis-Book'; background-color:#870028; " >
        {% block body %}
        
		
<div class="container" >
 <div class="col-md-4"></div>
	<div class="col-md-4 " style="margin-top: 100px;"  id="form" >
		  <h4 style="border-bottom: 1px solid #c5c5c5;">
		 	<img src="{{ asset('bundles/framework/images/encabezado.png') }}" class="img-responsive" style="margin:0 auto;width:450px;"/>
			<p style="margin: 0 auto; font-family: 'Dosis-Book'; "></p>
		  </h4>
		  <div style="padding: 15px;" id="form-olvidado">
			{% if error %}
				    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<form action="{{ path('login') }}" id="login-form" method="post">
				    <fieldset>
					    <div class="form-group input-group">
						  <span class="input-group-addon">
							<i class="glyphicon glyphicon-user"></i>
						  </span>
					    	<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
						</div>
					    <div class="form-group input-group">
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-lock">
								</i>
							</span>
					    	<input type="password" id="password" name="_password"  class="form-control"/>
					    </div>

				    {#
				        If you want to control the URL the user
				        is redirected to on success (more details below)
				        <input type="hidden" name="_target_path" value="/account" />
				    #}

				    	<button type="submit">login</button>
					</fieldset>
					</form>
				 <div class="col-md-4"></div>
		  </div>
	</div>
</div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>



