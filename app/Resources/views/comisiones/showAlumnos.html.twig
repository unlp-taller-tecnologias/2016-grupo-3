<table  id="alumnoTabla" width="520px"   >
				<thead style="background:#4D394A; color:white;">
				<tr>	
					<td style="text-align:center" >Nombre</td>
					<td style="text-align:center" >Apellido</td>
					<td style="text-align:center" >Ver Reporte</td>				
				</tr>	
				</thead>
				<tbody>
		
		 {% for item in alumnos %}
 
			<tr>
			<td>{{ item.nombre }}</td>
			<td>{{ item.apellido }}</td>
			<td style="text-align:center"><a href="{{ path('reporteAlumno_index') }}?idCursada={{ item.idCurso }}&idComision={{ item.idComision }}&idAlumno={{ item.idAlumno}}" > <img height="20px" src="{{ asset('bundles/framework/images/reporte.png')}}" /></a></td>
