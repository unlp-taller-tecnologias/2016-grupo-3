{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comisiones</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comisione.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ comisione.nombre }}</td>
            </tr>
            <tr>
                <th>Limvisible</th>
                <td>{{ comisione.limvisible }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ comisione.descripcion }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if comisione.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Inscriptos</th>
                <td>{{ comisione.inscriptos }}</td>
            </tr>
            <tr>
                <th>Borrado</th>
                <td>{{ comisione.borrado }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comisiones_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('comisiones_edit', { 'id': comisione.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
