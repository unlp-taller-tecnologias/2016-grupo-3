{% extends 'base.html.twig' %}

{% block body %}
      <div class="col-md-2"><a href="{{ path('parcial_new') }}?id={{ cursada }}" class="btn btn-primary">Nuevo Parcial de Cursada</a></br></div>
    <div class="col-md-2"> </div>
    <div class="col-md-2"></div>
    <div class="col-md-2"></div>
      <div class="col-md-2"></div>
    <div class="col-md-2"></div>
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
         <caption>Lista de Parciales</caption>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                {% if secretario == true %}
                <th>Acciones</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for parcial in parcials %}
            <tr>
                <td><a href="{{ path('instanciaparcial_index', { 'idParcial': parcial.id }) }}">{{ parcial.nombre }}</a></td>
                <td>{{ parcial.descripcion }}</td>
                {% if secretario == true %}
                <td>
                    <a href="{{ path('parcial_edit', { 'id': parcial.id }) }}">editar</a>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
          

{% endblock %}
  