{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <caption>Listado de Asistencias de la clase {{ clase.nombre }}</caption>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Estado</th>
                <th>Observacion</th>
            </tr>
        </thead>
        <tbody>

        {% for asistencia in asistencias %}
            <tr>
                <td>{{ asistencia.alumno.nombre }}</td>
                <td>{{ asistencia.alumno.apellido }}</td>
                <td>{{ asistencia.asistencia }}</td>
                <td>{{ asistencia.observacion }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('clase_index', { 'idComision': idComision }) }}">Volver</a>
        </li>
    </ul>
{% endblock %}
